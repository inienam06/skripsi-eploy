  //- Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    //- Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu' href='#' role='button')
          i.fas.fa-bars
  //- /.navbar
  //- Main Sidebar Container
  aside.main-sidebar.sidebar-dark-primary.elevation-4
    //- Brand Logo
    a.brand-link(href='/teknikal')
      img.brand-image.img-circle.elevation-3(src='/img/AdminLTELogo.png' alt='AdminLTE Logo' style='opacity: .8')
      span.brand-text.font-weight-light Inventory
    //- Sidebar
    .sidebar
      //- Sidebar user (optional)
      .user-panel.mt-3.pb-3.mb-3.d-flex
        .image
          img.img-circle.elevation-2(src='/img/user2-160x160.jpg' alt='User Image')
        .info
          a.d-block(href='#') #{session.nama}
      include sidebar
    //- /.sidebar
    //- Content Wrapper. Contains page content
