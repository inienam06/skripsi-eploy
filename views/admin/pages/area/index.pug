extends ../../layout

block content
  .content-wrapper
    //- Content Header (Page header)
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 Data Area
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='#') Home
              li.breadcrumb-item.active Data Area
      //- /.container-fluid
      //- Main content
      section.content
        //- Default box
        .card
          .card-header
            h3.card-title Data Area
            .card-tools
              a.btn.btn-tool(href='/admin/area/tambah' data-toggle="tooltip" title='Tambah' onclick="")
                i.fas.fa-plus
          .card-body
            table.table.table-hover.table-bordered.table-stripped.datatable
              thead
                tr
                  th(width="1%") No
                  th Nama Area
                  th(width="15%") Action
              tbody

block script
  script.
    $(document).ready(function() {
      getData()
    })

    function getData() {
      get({
        url: '/admin/area/datalist',
        isLoading: true
        }, function(response) {
          console.log(response)
          loading(false)
          var no = 1;
          var table = $('.table').find('tbody')
          var content = ''

          $.each(response.data, (index, area) => {
          content += '<tr>\
            <td align="center">'+(no++)+'</td>\
            <td>'+(area.nama_area)+'</td>\
            <td align="center"><button class="btn btn-sm btn-danger" onclick="hapus('+area.id_area+')" data-toggle="tooltip" title="Hapus"><i class="fas fa-trash"></i></button> <button class="btn btn-sm btn-info" onclick="ubah('+area.id_area+')" data-toggle="tooltip" title="Ubah"><i class="fas fa-edit"></i></button></td>\
            </tr>'
          })

          table.html(content)
          setDatatable('.datatable')
      })
    }

    function ubah(id)
    {
      document.location = '/admin/area/ubah/' + id
    }

    function hapus(id)
    {
      if(confirm('Anda yakin akan menghapus area tersebut ?'))
      {
        post({
          url: '/admin/area/hapus',
          data: {
          id: id
          },
          isLoading: true
          }, function(response) {
            console.log(response)
            loading(false)
            alert(response.message)

            if(response.status) {
              document.location = '/admin/area'
            }
        })
      }
    }